

<Container>:
    orientation: 'vertical'

    text_input: text_input
    enter_btn: enter_btn
    on_size:
        root.rescale_enter_btn()

    BoxLayout:  # верхняя панель
        canvas:
            Color:
                rgba: (81/255, 125/255, 162/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: (1, 0.1)

        Label:
            color: 'white'
            text: 'Bobby'
            font_size: 16

    BoxLayout:  # панель сообщений
        canvas:
            Color:
                rgba: (211/255, 233/255, 235/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: (1, 0.84)

        Label:
            color: 'black'
            text: 'messages here'

    BoxLayout:  # панель ввода
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: (1, 0.06)

        TextInput:
            id: text_input
            padding: (10, 10)
            on_text:
                root.rescale_text_input()

        Button:
            id: enter_btn
            text: 'Enter'
            size_hint: (.1, 1)
            on_press:
                root.send_data()
